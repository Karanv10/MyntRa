                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/divider3"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:background="#878585"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@+id/divider2"
                android:layout_below="@+id/regular"
                android:layout_width="190dp"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/sport"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/divider2"
                android:textSize="14dp"
                android:text="Sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/training"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:text="Training or Gym"
                android:layout_below="@+id/sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/divider4"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:background="#878585"
                android:layout_below="@+id/training"
                android:layout_width="180dp"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/product"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/divider4"
                android:textSize="14dp"
                android:text="Product Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/detail_product2"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:text="Teal green"
                android:layout_below="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/size"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/detail_product2"
                android:textSize="14dp"
                android:text="Size &amp; Fit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/slimfit"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:text="Slim Fit"
                android:layout_below="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/model"
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:text="The model (height 6') is wearing a size M"
                android:layout_below="@+id/slimfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

