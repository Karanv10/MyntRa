<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="#9CECECEB"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="580dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/img_slider_product2"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>

            <TextView
                android:id="@+id/text_product2"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_below="@+id/img_slider_product2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_product3"
                android:textSize="16dp"
                android:layout_marginStart="4dp"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text_product2"
                android:layout_below="@+id/img_slider_product2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mrp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/text_product3"
                android:text="MRP"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/rupee"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@+id/mrp"
                android:layout_below="@+id/text_product3"
                android:text="₹"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/cutprice_product2"
                android:layout_marginStart="2dp"
                android:text=""
                android:background="@drawable/strike_through"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/rupee"
                android:layout_below="@+id/text_product3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/rupee2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@+id/cutprice_product2"
                android:layout_below="@+id/text_product3"
                android:text="₹"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_product2"
                android:layout_marginStart="2dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=""
                android:textSize="12dp"
                android:layout_toRightOf="@+id/rupee2"
                android:layout_below="@+id/text_product3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/asterik"
                android:text="*"
                android:textColor="#0DB161"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@+id/price_product2"
                android:layout_below="@+id/text_product3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/offer_product2"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text=""
                android:background="@drawable/textbg"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/asterik"
                android:layout_below="@+id/text_product3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bannertxt_product2"
                android:layout_marginStart="10dp"
                android:textColor="#13AE62"
                android:text=""
                android:textSize="12dp"
                android:layout_below="@+id/offer_product2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bank_product2"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Bank offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bankad_product2"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:textSize="14dp"
                android:text="Up To Rs 500 Cashback on CRED pay transactions. - Min Spend Rs 1,000.Available only on Android Devices."
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/bank_product2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/divider"
                android:background="#878585"
                android:layout_below="@+id/bankad_product2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/emi_product2"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:textSize="16dp"
                android:layout_below="@+id/divider"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="EMI option available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/view_product"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:text="View Plan"
                android:gravity="right"
                android:textSize="16dp"
                android:textColor="#F50057"
                android:layout_marginStart="160dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/emi_product2"
                android:layout_below="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/emiad_product2"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:textSize="14dp"
                android:text="EMI starting from ₹22/month"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/emi_product2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/s"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:text="Size:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/size_product2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/s"
                android:layout_marginTop="8dp"
                android:layout_marginStart="3dp"
                android:text=""
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/sizechart_product2"
                android:textStyle="bold"
                android:gravity="right"
                android:text="Size Chart"
                android:layout_toRightOf="@+id/size_product2"
                android:textSize="16dp"
                android:textColor="#F50057"
                android:layout_marginStart="245dp"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/measure"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:textSize="14dp"
                android:text="Garment Measurement:"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/size_product2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/measure_product2"
                android:textSize="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="3dp"
                android:text=""
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/size_product2"
                android:layout_toRightOf="@+id/measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/radiogrp"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/measure_product2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio1"
                    android:gravity="center"
                    android:text="S"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_txt"
                    android:elevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="M"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_txt"
                    android:elevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="L"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_txt"
                    android:elevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="XL"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_txt"
                    android:elevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

            <TextView
                android:id="@+id/rupee_s"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/radiogrp"
                android:text="₹"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_s"
                android:layout_marginStart="2dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="299"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/rupee_s"
                android:layout_below="@+id/radiogrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/rupee_s2"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@+id/price_s"
                android:layout_below="@+id/radiogrp"
                android:text="₹"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/cutprice_s"
                android:layout_marginStart="2dp"
                android:text="599"
                android:layout_marginTop="10dp"
                android:background="@drawable/strike_through"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/rupee_s2"
                android:layout_below="@+id/radiogrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/paranthesis1"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/cutprice_s"
                android:layout_below="@+id/radiogrp"
                android:textColor="#FF9100"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:text="("
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/offer_s"
                android:textColor="#FF9100"
                android:text="58% OFF"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/paranthesis1"
                android:layout_below="@+id/radiogrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/paranthesis2"
                android:layout_toRightOf="@+id/offer_s"
                android:layout_below="@+id/radiogrp"
                android:textColor="#FF9100"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:text=")"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/date_s"
                android:layout_marginStart="10dp"
                android:text=""
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:layout_below="@+id/rupee_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/wishlist_btn"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:paddingRight="35dp"
                android:text="WISHLIST"
                android:drawableLeft="@drawable/heartbtn"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/date_s"
                android:layout_width="180dp"
                android:layout_height="50dp"/>

            <Button
                android:id="@+id/cart_btn"
                android:layout_marginTop="15dp"
                android:backgroundTint="#F50057"
                android:textColor="@color/white"
                android:paddingRight="35dp"
                android:text="ADD TO BAG"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/bagbtn"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/wishlist_btn"
                android:layout_below="@+id/date_s"
                android:layout_width="190dp"
                android:layout_height="50dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/delivery"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Delivery &amp; Services for"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_delivery"
                app:cardElevation="10dp"
                android:background="@drawable/cardbg_product"
                android:layout_below="@+id/delivery"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/address_product2"
                        android:layout_marginStart="10dp"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:ems = "9"
                        android:textStyle="bold"
                        android:text=""
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/address_btn"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="right"
                        android:textColor="#F50057"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/dimg"
                android:scaleType="centerCrop"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/card_delivery"
                android:src="@drawable/delivery_truck_svgrepo_com"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/dtxt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/dimg"
                android:layout_below="@+id/card_delivery"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Get it on time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/dimg2"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/dimg"
                android:src="@drawable/payment_svgrepo_com"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:gravity="center"
                android:id="@+id/dtxt2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/dimg"
                android:layout_below="@+id/dtxt"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Pay on delivery available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/dimg3"
                android:layout_marginStart="13dp"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/dimg2"
                android:src="@drawable/exchange_change_svgrepo_com"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/dimg3"
                android:layout_below="@+id/dtxt2"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:text="Easy 14 days return &amp; exchange available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fit"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Fit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/slim"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:textSize="14dp"
                android:text="Slim Fit"
                android:layout_below="@+id/fit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/divider2"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:background="#878585"
                android:layout_below="@+id/slim"
